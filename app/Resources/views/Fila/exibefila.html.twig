{% extends "base.html.twig" %}
{% block conteiner %}
    <div class="row">
        <div class="col">
            <div class="card border-light" >
                <div class="card-header h5 text-center">Fila: {{ fila.nome }}</div>
                <div class="card-body">
                    <div class="row" style="margin-bottom: 5px; margin-top: -15px;">
                        <div class="container-fluid text-center">
                            <table width="76%" style="margin: 0 12% 0 12%;">
                                <tr>
                                    <td width="20%" align="left">
                                        <form action="{{path('CadastroServico')}}" method="post">
                                            <input type="hidden" name="idFila" value="{{ fila.id }}" />
                                            <button type="submit" class="btn btn-primary" style="width: 100px;"><b>+</b> Novo</button>
                                        </form>
                                    </td>
                                    <td align="right" width="80%">
                                        <form action="{{path('BuscarFila')}}" class="form-inline" style="width: 281px;" method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control" placeholder="Pesquisar (nome)" style="margin-right: 20px;" name="busca">
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-secondary">Buscar</button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-sm table-striped" style="margin: 0 12% 0 12%;">
                            <thead>
                                <tr align="center" style="font-size: 15pt;">
                                    <th scope="col" colspan="5">Serviços</th>
                                </tr>
                                <tr>
                                    <th scope="col" width="40px">#</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" width="50px"></th>
                                    <th scope="col" width="50px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if servicos == null %}                                       
                                    <tr align="center">
                                        <td colspan="5">
                                            <div>Nenhum registro encontrado!</div>
                                        </td>
                                    </tr>
                                {% else %}
                                    {% for servico in servicos %}
                                        <tr>
                                            <th scope="row" style="vertical-align: middle;" width="80px">{{ servico.id }}</th>
                                            <td style="vertical-align: middle;">{{ servico.nome }}</td>
                                            <td style="vertical-align: middle;" width="250px">{{ servico.status_2 }}</td>
                                            <td width="50px">
                                                <form action="{{path('AlterarUsuario')}}" method="post">
                                                    <input type="hidden" name="id" value="{{ servico.id }}"/>
                                                    <button type="submit" style="border: none; background: none;">
                                                        <img src="{{asset('bundles/app/imagens/alterar.png')}}" style="width: 20px; height: 20px;"/>
                                                    </button>
                                                </form>
                                            </td>
                                            <td width="50px">
                                                <button type="button" onclick="confirmar({{ servico.id }});" style="border: none; background: none;">
                                                    <img src="{{asset('bundles/app/imagens/excluir.png')}}" style="width: 20px; height: 20px;"/>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                            </tbody>
                        </table>
                    </div><br/>
                    <div class="row">
                        <div class="col text-center">
                            <button type="button" id="voltar" class="btn btn-secondary">Voltar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {#                            Inicio Modal Excluir#}
    {% if mensagem != null %}
        <script>
            $(document).ready(function () {
                $('#ModalCenterMensagem').modal('show');
            });
        </script>    
    {% endif %}
    {% if mensagem != null %}
        <div class="modal fade" id="ModalCenterMensagem" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        {% else %}
            <div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            {% endif %}
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-danger" id="exampleModalCenterTitle">Mensagem</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {% if mensagem != null %}
                            {{ mensagem }}
                        {% else %}
                            <p>Tem certeza que deseja excluir?</p>
                        {% endif %}
                    </div>
                    <div class="modal-footer">
                        {% if mensagem != null %}
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                        {% else %}
                            <form id="enviaDelete" action="#" method="post">
                                <input type="hidden" name="id" />
                            </form>
                            <button type="button" id="sim" class="btn btn-success">Sim</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Não</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {#                            Fim Modal Excluir#}

        <script>
            $("#voltar").click(function () {
                window.location.href = "{{path('Filas')}}";
            });

            function confirmar(id) {
                $(document).ready(function () {
                    $('#ModalCenter').modal('show');
                });

                $("#sim").click(function () {
                    $("input[name='id']").val(id);
                    $("#enviaDelete").submit();
                });
            }

            $('#ModalCenterMensagem').on('hide.bs.modal', function () {
                window.location.href = "#";
            });

        </script>
    {% endblock %}