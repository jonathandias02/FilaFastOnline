{% extends "base.html.twig" %}
{% block conteiner %}
    {#    inicio modal de erro#}

    {% if mensagem != null%}
        <script>
            $(document).ready(function () {
                $('#ModalCenter').modal('show');
            });
        </script>

        <div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-success" id="exampleModalCenterTitle">Mensagem</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ mensagem }}
                    </div>
                    <div class="modal-footer">
                        <form action="{{path('AlterarFila')}}" id="enviaID" method="post">
                            <input type="hidden" name="id" value="{{ fila.id }}"/>
                        </form>
                        <button type="button" class="btn btn-success" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {#    fim modal de erro#}

    <div class="row">
        <div class="col">
            <div class="card border-light" >
                <div class="card-header h5 text-center">Alterar Fila</div>
                <div class="card-body">
                    <form style="padding: 2% 10% 2% 10%;" action="{{path('SalvarAlteracaoFila')}}" method="post">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Nome" name="nome" maxlength="60" minlength="2" onkeyup="somenteLetras2(this);" value="{{ fila.nome }}" required>
                                <input type="hidden" name="id" value="{{ fila.id }}"/>
                            </div>
                        </div><br/>
                        <div class="row">
                            <div class="col-1" style="margin-right: -35px;">
                                <label class="my-2 mr-2">Status:</label>
                            </div>
                            <div class="col-2">                                
                                <select class="custom-select my-1 mr-sm-1" name="status">
                                    <option selected value="{{ fila.status_2 }}">{{ fila.status_2 }}</option>
                                    {% if fila.status_2 != "Ativo" %}
                                        <option value="Ativo">Ativo</option>
                                    {% endif %}
                                    {% if fila.status_2 != "Inativo" %}
                                        <option value="Inativo">Inativo</option>
                                    {% endif %}
                                </select>
                            </div>                            
                        </div><br/>
                        <div class="row">
                            <div class="col text-center">
                                <button type="button" class="btn btn-secondary" style="margin-right: 25px; width: 100px;" id="cancelarFila">Voltar</button>
                                <button type="submit" class="btn btn-primary" style="width: 100px;">Alterar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        $("#cancelarFila").click(function () {
            window.location.href = "{{path('Filas')}}";
        });

        $('#ModalCenter').on('hide.bs.modal', function () {
            $("#enviaID").submit();
        });
    </script>
{% endblock %}