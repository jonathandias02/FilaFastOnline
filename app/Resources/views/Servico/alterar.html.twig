{% extends "base.html.twig" %}
{% block conteiner %}
    {#    inicio modal de erro#}

    {% if mensagem != null%}
        <script>
            $(document).ready(function () {
                $('#ModalCenter').modal('show');
            });
        </script>

        <div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        {% if mensagem == "Alterado com sucesso!" %}
                            <h5 class="modal-title text-success" id="exampleModalCenterTitle">Mensagem</h5>
                        {% else %}
                            <h5 class="modal-title text-danger" id="exampleModalCenterTitle">Mensagem</h5>
                        {% endif %}
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ mensagem }}
                    </div>
                    <div class="modal-footer">
                        {% if mensagem == "Alterado com sucesso!" %}
                            <button type="button" class="btn btn-success" data-dismiss="modal">Fechar</button>
                        {% else %}
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {#    fim modal de erro#}

    <div class="row">
        <div class="col">
            <div class="card border-light" >
                <div class="card-header h5 text-center">Cadastro de Serviços</div>
                <div class="card-body">
                    <form style="padding: 2% 10% 2% 10%;" action="{{path('SalvarAlteracaoServico')}}" method="post">
                        <div class="row">
                            <div style="width: 60px; margin-left: 15px;">
                                <input type="hidden" name="id" value="{{ servico.id }}"/>
                                <input type="text" class="form-control" placeholder="Sigla" name="sigla" maxlength="2" minlength="1" onkeyup="" value="{{ servico.sigla }}" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Nome" name="nome" maxlength="60" minlength="2" value="{{ servico.nome }}" onkeyup="somenteLetras2(this);" required>
                            </div>
                        </div><br/>
                        <div class="row">
                            <div class="col">
                                <label>Descrição:</label>
                                <textarea class="form-control" name="descricao">{{ servico.descricao }}</textarea>
                            </div>
                        </div><br/>
                        <div class="row">
                            <div class="col-1" style="margin-right: -35px;">
                                <label class="my-2 mr-2">Status:</label>
                            </div>
                            <div class="col-2">                                
                                <select class="custom-select my-1 mr-sm-1" name="status">
                                    <option selected value="{{ servico.status_2 }}">{{ servico.status_2 }}</option>
                                    {% if servico.status_2 != "Ativo" %}
                                    <option value="Ativo">Ativo</option>
                                    {% endif %}
                                    {% if servico.status_2 != "Inativo" %}
                                    <option value="Inativo">Inativo</option>
                                    {% endif %}
                                </select>
                            </div>                            
                        </div><br/>
                        <div class="row">
                            <div class="col text-center">
                                <button type="button" class="btn btn-secondary" style="margin-right: 25px; width: 100px;" id="voltar">Voltar</button>
                                <button type="submit" class="btn btn-primary" style="width: 100px;">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <form action="{{path('VisualizaFila')}}" method="post" id="enviaID">
        <input type="hidden" name="id" value="{{ idFila }}" />
    </form>
    <script>
        $("#voltar").click(function () {
            $("#enviaID").submit();
        });

        {#$('#ModalCenter').on('hide.bs.modal', function () {
            $("#enviaID").submit();
        });#}
    </script>
{% endblock %}